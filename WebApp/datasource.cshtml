@{
    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "Kendo Datasource";
}
<form id="test" action="/" target="_blank" method="post" class="form-horizontal">
    <div class="form-group">
        <div class="col-md-12">
            <input data-role="dropdownlist"
                   data-bind="source: users, value: user"
                   data-value-field="id"
                   data-text-field="name" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <div data-role="grid" data-bind="source: posts"></div>
        </div>
    </div>
</form>
@section footer
{
    <script src="~/assets/js/datasource.js" crossorigin="anonymous"></script>
}